<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="com.avkd.humible.HomeFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp"
            android:orientation="vertical"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_background_eff"
                >
            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                >

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="48"
                    android:progressDrawable="@drawable/custom_progressbar_drawable"
                    android:background="@drawable/circle_shape"
                    android:secondaryProgress="0" />

                <FrameLayout
                    android:id="@+id/fl_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="160dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginEnd="94.7dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >
                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggraeii"
                        android:textSize="66.7sp"
                        android:textColor="#494949"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="-16.2sp"
                        android:gravity="center_horizontal"
                        android:paddingEnd="30dp"
                        android:text="48"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggraeii"
                        android:layout_marginBottom="12dp"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="-16.2sp"
                        android:textColor="#494949"
                        android:textSize="26.8sp"
                        android:layout_gravity="end|bottom"
                        android:text="%" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/binggraeii"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="3.7sp"
                    android:text="고객님의 실내 습도는\n다소 높습니다."
                    android:textColor="#494949"
                    android:textSize="17.3sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fl_num"
                    app:layout_constraintVertical_bias="0.0"
                    />

            </android.support.constraint.ConstraintLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="391.3dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="26dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_icon_01"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/binggraeii"
                            android:textSize="17.3sp"
                            android:textColor="#494949"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3.7sp"
                            android:gravity="center_horizontal"
                            android:text="On/Off"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_icon_02"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/binggraeii"
                            android:textSize="17.3sp"
                            android:textColor="#494949"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3.7sp"
                            android:gravity="center_horizontal"
                            android:text="Timer"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_icon_03"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/binggraeii"
                            android:textSize="17.3sp"
                            android:textColor="#494949"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3.7sp"
                            android:gravity="center_horizontal"
                            android:text="Mood Light"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_icon_04"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/binggraeii"
                            android:textSize="17.3sp"
                            android:textColor="#494949"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3.7sp"
                            android:gravity="center_horizontal"
                            android:text="Automatic\nadjustment"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_icon_05"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/binggraeii"
                            android:textSize="17.3sp"
                            android:textColor="#494949"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3.7sp"
                            android:gravity="center_horizontal"
                            android:text="Sleep"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/btn_icon_06"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/binggraeii"
                            android:textSize="17.3sp"
                            android:textColor="#494949"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3.7sp"
                            android:gravity="center_horizontal"
                            android:text="Sterilization"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>