<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68.3dp"
    android:background="#80DCEFFB"
    >

    <TextView
        android:id="@+id/tv_btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareroundl"
        android:layout_centerVertical="true"
        android:paddingStart="26dp"
        android:textSize="51.3sp"
        android:textColor="#494949"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="-27.2sp"
        android:gravity="center_horizontal"
        android:text="â‰¡"
        />

    <TextView
        android:id="@+id/tv_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareroundl"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:paddingStart="17dp"
        android:textSize="35.2sp"
        android:textColor="#494949"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="-18.7sp"
        android:gravity="center_horizontal"
        android:text="&lt;"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquareroundl"
        android:layout_gravity="center_vertical"
        android:textSize="23.7sp"
        android:textColor="#494949"
        android:letterSpacing="-0.05"
        android:lineSpacingExtra="-12.5sp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="My Home"
        />

    <Switch
        android:id="@+id/sw_ble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_track_on" />

</RelativeLayout>